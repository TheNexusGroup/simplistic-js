{
  "name": "simplistic-js",
  "version": "0.1.0",
  "description": "Natural Web Development Syntax - Build websites with simple, readable JavaScript",
  "main": "dist/simplistic.cjs.js",
  "module": "dist/simplistic.esm.js",
  "types": "dist/simplistic.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/simplistic.d.ts",
      "import": "./dist/simplistic.esm.js",
      "require": "./dist/simplistic.cjs.js"
    },
    "./state": {
      "types": "./dist/state.d.ts",
      "import": "./dist/state.esm.js",
      "require": "./dist/state.cjs.js"
    }
  },
  "files": [
    "dist",
    "lib/src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "python3 lib/server.py",
    "test": "jest",
    "test:watch": "jest --watch",
    "docs:dev": "vite serve site --port 3001",
    "docs:build": "vite build site",
    "sandbox:dev": "vite serve sandbox --port 3002",
    "typecheck": "tsc --noEmit",
    "lint": "eslint lib/src --ext .ts,.js",
    "format": "prettier --write lib/src/**/*.{ts,js}",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run build",
    "serve": "python3 -m http.server 9292"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheNexusGroup/simplistic-js.git"
  },
  "keywords": [
    "web-framework",
    "ui-library",
    "javascript",
    "typescript",
    "reactive",
    "state-management",
    "dom",
    "frontend",
    "natural-syntax",
    "simple",
    "declarative"
  ],
  "author": "TheNexusGroup",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TheNexusGroup/simplistic-js/issues"
  },
  "homepage": "https://github.com/TheNexusGroup/simplistic-js#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "rollup": "^4.9.6",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "dependencies": {
    "playwright": "^1.55.0",
    "tslib": "^2.6.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
